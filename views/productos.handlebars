{{! PRODUCTOS INICIO }}
<div class="container mt-5">
  <div class="row justify-content-md-between my-3">
    <div class="d-none d-md-block col-md-2 aside">
      <div class="pt-4 pt-md-0 mb-4 col-12 text-center">
        <h4>Categorias</h4>
      </div>
      <div>
        <ul>
          <li><a href="/productos?categoria=pc_escritorio">PC Escritorio</a></li>
          <li><a href="/productos?categoria=notebook">Notebook</a></li>
          <li><a href="/productos?categoria=componentePC">Componentes PC</a></li>
        </ul>
      </div>
    </div>
    <div class="col-12 col-md-10 pl-md-5">
      <div class="row">
        <div class="col-12 text-center">
          <h3>{{tituloProductos}}</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="contenedor-productos">
            {{#each productos}}
              <a href="/producto?id={{this.id}}">
                <div class="tarjeta-producto">
                  <div class="tarjeta-producto-imagen">
                    <img src="imagenes/{{this.foto}}" alt="" />
                  </div>
                  <div class="tarjeta-producto-contenido">
                    <div class="descuento">
                      <span class="descuento">{{this.descuento}}% OFF</span>
                    </div>
                    <div class="info">
                      <p class="precio">${{this.precio}}</p>
                      <p class="financiacion">{{this.financiacion}}</p>
                      <p class="nombre">{{this.nombre}}</p>
                    </div>
                  </div>
                </div>
              </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>